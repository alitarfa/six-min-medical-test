<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/l1"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="F.C"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/shape_fc"
                android:textColor="#fff"
                android:layout_margin="20dp"
                />

            <TextView

                android:id="@+id/fc_value"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:text="0"
                android:background="@drawable/shape_login_edit"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="SPO2"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/shape_fc"
                android:textColor="#fff"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/spo2_value"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:text="0"
                android:background="@drawable/shape_login_edit"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:background="@drawable/shape_fc"
                android:layout_margin="20dp"
                android:id="@+id/distance_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Dist"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_login_edit"
                android:gravity="center"
                android:hint="0 value"
                android:id="@+id/distance_text"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_login_edit"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:id="@+id/distance_text_edit"
                />



        </LinearLayout>


        <LinearLayout
            android:background="@drawable/shape_login_edit"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Chronometer
                android:gravity="center"
                android:id="@+id/chronometer3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/start_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/ic_play_circle_outline_black_24dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/restart_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/ic_replay_black_24dp" />

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/stop_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/ic_stop_black_24dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_fc"
                android:text="Interump"
                android:textColor="@color/white" />

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/finishBtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_fc"
                android:text="Finish"
                android:textColor="@color/white" />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>